<!-- Room Details Section Begin -->
<section class="room-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="room-details-item">
                    <div class="row justify-content-center"></div>
                    <img style="width: 100%;" src="{{room.img}}" alt="room">
                    {{!-- <img style="width: 100%;" src="/img/room/room-details.jpg" alt="room"> --}}
                    <div class="rd-text">
                        <div class="rd-title">
                            <h3 id="tenphong">{{room.name}}</h3>
                            <div class="rdt-right">
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star-half_alt"></i>
                                </div>
                                <!-- <a href="#">Chọn phòng</a> -->
                                <a href="{{room.slug}}/booking" onclick="getInfoRoom">Đặt phòng ngay</a>
                            </div>
                        </div>
                        <h2 style="color:brown; margin: 0px auto;" class="room-price">{{room.price}}<span>/NGÀY</span>
                        </h2>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="r-o">Diện tích:</td>
                                    <td>{{room.area}}</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Số người tối đa:</td>
                                    <td>{{room.people}}</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Giường:</td>
                                    <td>{{room.bed}}</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Tiện ích phòng:</td>
                                    <td>{{room.extra}}</td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="f-para">{{room.description1}}</p>
                        <p>{{room.description2}}</p>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>
