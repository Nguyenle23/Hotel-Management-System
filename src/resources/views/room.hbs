<!-- Rooms Section Begin -->
<section class="rooms-section spad">
    <div class="container">
        <div class="row">

            {{#each room}}
            <div class="col-lg-4 col-md-6">
                <div class="room-item">
                    <img src="{{this.img}}" alt="">
                    <div class="ri-text">
                        <h4>{{this.name}}</h4>
                        <h3 class="room-price">{{this.price}}<span>/NGÀY</span>
                        </h3>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="r-o">Diện tích:</td>
                                    <td>{{this.area}}</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Số người tối đa:</td>
                                    <td>{{this.people}}</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Giường:</td>
                                    <td>{{this.bed}}</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Tiện ích phòng:</td>
                                    <td>{{this.extra}}</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="/room/{{this.slug}}" class="primary-btn">More Details</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>
<!-- Rooms Section End -->


